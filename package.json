{
  "name": "trafficlight",
  "version": "1.0.0",
  "description": "Teamcity builds status visualisator",
  "scripts": {
    "lint": "npm-run-all lint:js lint:css",
    "lint:css": "stylelint \"client/**/*.css\"",
    "lint:js": "eslint --ext .js --ext .jsx \"+(server|client)/**/*+(.js|.jsx)\" ",
    "build": "cross-env NODE_ENV=development webpack --color --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --color --progress",
    "start": "cross-env NODE_ENV=development node server/server",
    "start:reload": "cross-env NODE_ENV=development nodemon -w ./server/ --delay 1000 start",
    "start:debug:reload": "cross-env NODE_ENV=development nodemon -w ./server/ --delay 1000 start:debug",
    "start:debug": "cross-env NODE_ENV=development node $NODE_DEBUG_OPTION ./server/server",
    "start:prod": "cross-env NODE_ENV=production node server/server",
    "fake-teamcity": "json-server --routes fakeTeamcity/routes.json --watch fakeTeamcity/teamcity.json --port 3001"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-polyfill": "^6.22.0",
    "bindings": "^1.2.1",
    "body-parser": "^1.17.2",
    "classnames": "^2.2.5",
    "express": "^4.14.1",
    "express-fileupload": "^0.1.3",
    "font-awesome": "^4.7.0",
    "lame": "^1.2.4",
    "method-override": "^2.3.8",
    "mongoose": "^4.9.9",
    "pcm-volume": "^1.0.0",
    "ramda": "^0.23.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-dropzone": "^3.13.2",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-scrollbar": "^0.5.1",
    "react-toolbox": "^2.0.0-beta.12",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^2.5.4",
    "serve-favicon": "^2.4.1",
    "speaker": "^0.3.0",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "file-loader": "^0.10.0",
    "json-server": "^0.9.5",
    "minimist": "^1.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss": "^5.2.12",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-focus": "^1.0.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.2",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^5.1.2",
    "prop-types": "^15.5.10",
    "style-loader": "^0.13.1",
    "stylelint": "^7.10.1",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "webpack": "2.2.1",
    "webpack-dev-server": "^1.16.3",
    "webpack-hot-middleware": "^2.16.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "semi": [
        2,
        "never"
      ],
      "max-len": [
        2,
        120,
        2
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "react/jsx-space-before-closing": 0,
      "react/jsx-boolean-value": [
        "error",
        "always"
      ],
      "react/no-unused-prop-types": 0
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "rules": {
      "font-family-name-quotes": "always-where-recommended",
      "declaration-empty-line-before": null,
      "rule-empty-line-before": null,
      "custom-property-empty-line-before": null,
      "block-closing-brace-empty-line-before": null,
      "declaration-block-no-duplicate-properties": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ]
    }
  }
}
