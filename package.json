{
  "name": "trafficlight",
  "version": "1.0.0",
  "description": "Teamcity builds status visualisator",
  "scripts": {
    "lint": "eslint --ext .js --ext .jsx \"client/\" ",
    "build": "cross-env NODE_ENV=development webpack --color --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --color --progress",
    "start": "cross-env NODE_ENV=development node server/server",
    "start:prod": "cross-env NODE_ENV=production node server/server",
    "fake-teamcity": "json-server --routes fakeTeamcity/routes.json --watch fakeTeamcity/teamcity.json --port 3001"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-polyfill": "^6.22.0",
    "body-parser": "^1.16.0",
    "classnames": "^2.2.5",
    "express": "^4.14.1",
    "font-awesome": "^4.7.0",
    "player": "^0.6.1",
    "ramda": "^0.23.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^2.5.4"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "file-loader": "^0.10.0",
    "json-server": "^0.9.5",
    "minimist": "^1.2.0",
    "postcss": "^5.2.12",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-focus": "^1.0.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.2",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^5.1.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "2.2.1",
    "webpack-dev-server": "^1.16.3",
    "webpack-hot-middleware": "^2.16.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "semi": [
        2,
        "never"
      ],
      "max-len": [
        2,
        120,
        2
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "react/jsx-space-before-closing": 0,
      "react/jsx-boolean-value": [
        "error",
        "always"
      ]
    }
  }
}
