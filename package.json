{
  "name": "trafficlight",
  "version": "1.0.0",
  "description": "Teamcity builds status visualisator",
  "scripts": {
    "lint": "eslint --ext .js --ext .jsx \"client/\" ",
    "build": "cross-env NODE_ENV=development webpack --color --progress",
    "build:prod": "cross-env NODE_ENV=production webpack --color --progress",
    "start": "cross-env NODE_ENV=development node server/server",
    "start:prod": "cross-env NODE_ENV=production node server/server"
  },
  "dependencies": {
    "express": "^4.14.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "minimist": "^1.2.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^1.16.3",
    "webpack-hot-middleware": "^2.16.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "max-len": [
        2,
        120,
        2
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "react/jsx-space-before-closing": 0,
      "react/jsx-boolean-value": [
        "error",
        "always"
      ]
    }
  }
}
